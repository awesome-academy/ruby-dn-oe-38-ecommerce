<div class="container">
  <div class="row title_products"><%= t ".all_product" %></div>
  <% @products.in_groups_of(4, false).each do |group|%>
    <div class="row">
      <% group.each do |product| %>
        <div class="grid_1_of_4 images_1_of_4 products-info">
          <%= image_tag("", alt: t(".photo")) %>
          <%= link_to product.name, product_path(product.id) %>
          <h3><%= number_to_currency(product.price) %></h3>
          <%= form_for @order_detail, remote: true  do |f|%>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.hidden_field :quantity, value: 1 %>
            <%= f.submit t(".cart"), class: "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="mt-2 ml-4">
    <%= paginate @products %>
  </div>
</div>
