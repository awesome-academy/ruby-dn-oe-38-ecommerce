<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title), yield(:base) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "custom", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "customer_style", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "sb-admin-2.min", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body id="page-top">
    <div class="m-1">
      <%= link_to t(".english"), locale: :en %>
      <%= link_to t(".vietnamese"), locale: :vi %>
    </div>
    <%= render "admin/layouts/main" %>

    <!-- open to use the admin layout -->
    <!-- <%= render "admin/layouts/main" %> -->

    <!-- open to use the customer layout -->
    <%= render "layouts/main" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </body>
  <%= debug(params) if Rails.env.development? %>
</html>
